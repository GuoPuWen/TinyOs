;---------- loader 和 kernel 配置信息

LOADER_BASE_ADDR equ	0x900	;程序位置
LOADER_START_SECTOR equ	0x2	;磁盘位置

DESC_G_4k		equ	1_00000000000000000000000b	;G位于第24位 1代表单位4k
DESC_D_32		equ	1_0000000000000000000000b	;D表示代码段，1代表操作数32位
DESC_L			equ	0_000000000000000000000b	;L表示是否为64位代码段，0代表否
DESC_AVL		equ	0_00000000000000000000b		;cpu不用此位都为0
DESC_LIMIT_CODE2	equ	1111_0000000000000000b		;段界限19～16位
DESC_LIMIT_DATA2	equ	DESC_LIMIT_CODE2		;
DESC_LIMIT_VIDEO2	equ	0000_000000000000000b		;???
DESC_P			equ	1_000000000000000b		;P表示段是否存在 
DESC_DPL_0		equ	00_0000000000000b		;DPL 0
DESC_DPL_1		equ	01_0000000000000b		;DPL 0
DESC_DPL_2		equ	10_0000000000000b		;DPL 0
DESC_DPL_3		equ	11_0000000000000b		;DPL 0
DESC_S_CODE		equ	1_000000000000b			;1表示数据段 cpu眼中
DESC_S_DATA		equ	DESC_S_CODE
DESC_S_sys		equ	0_000000000000b			;0表示系统段
DESC_TYPE_CODE		equ	1000_00000000b			;代码段
DESC_TYPE_DATA		equ	0010_00000000b


DESC_CODE_HIGH4		equ 	(0x00 << 24) + DESC_G_4k + DESC_D_32 + DESC_L + DESC_AVL + DESC_LIMIT_CODE2 + DESC_P  + DESC_DPL_0 + DESC_S_CODE + DESC_TYPE_CODE + 0x00

DESC_DATA_HIGH4		equ	    (0x00 << 24) + DESC_G_4k + DESC_D_32 + DESC_L + DESC_AVL + DESC_LIMIT_DATA2 + DESC_P + DESC_DPL_0 + DESC_S_DATA + DESC_TYPE_DATA + 0x00

DESC_VIDEO_HIGH4 	equ 	(0x00 << 24) + DESC_G_4K + DESC_D_32 + DESC_L + DESC_AVL + DESC_LIMIT_VIDEO2 + DESC_P + DESC_DPL_0 + DESC_S_DATA + DESC_TYPE_DATA + 0x0b

;--------------   选择子属性  ---------------
RPL0  equ   00b
RPL1  equ   01b
RPL2  equ   10b
RPL3  equ   11b
TI_GDT	 equ   000b
TI_LDT	 equ   100b


	
